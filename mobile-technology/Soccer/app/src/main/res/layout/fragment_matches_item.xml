<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_matches_item_state"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/match_not_verified"
        android:layout_marginRight="7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_matches_item_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:text="Start time"/>
        <TextView
            android:id="@+id/tv_matches_item_available_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:text="0/0 slots are available"/>
        <TextView
            android:id="@+id/tv_matches_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:textColor="@color/colorAccent"
            android:text="0 VND"/>
    </LinearLayout>
</LinearLayout>